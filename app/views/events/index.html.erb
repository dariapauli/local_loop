
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<% if @events.present? %>
  <% @events.each do |event| %>
    <div class="event-cards">
      <h2><%= link_to event.name, event_path(event), class: "link-underline-opacity-0" %></h2>
      <p><%= event.description %></p>
      <i class="fa-solid fa-location-dot"></i> <%= event.address %>
      <% if event.date.present? %>
        <i class="fa-regular fa-calendar-days"></i> <%= event.date.strftime("%A, %B %d, %Y") %>
      <% end %>
      <% if event.time.present? %>
        <p><i class="fa-regular fa-clock"></i> <%= event.time.strftime("%I:%M %p") %></p>
      <% end %>
      <p>Category: <%= event.category %></p>
      <%= age_group_to_string(event) %>
      <div class="price-box">
        <% if event.price == 0 %>
          <p class="blue-price">Free</p>
        <% else %>
          <p class="beige-price">
            <%= number_to_currency(event.price, unit: "â‚¬") %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
<p>There is no event in this city</p>
<% end  %>
