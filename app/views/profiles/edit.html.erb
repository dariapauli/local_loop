<h3>Edit your profile:</h3>

<%= simple_form_for @profile, url: profile_path(@profile) do |f| %>
  <%= f.input :photo, as: :file %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :birthdate, as: :date, start_year: 1900,
                              end_year: Date.today.year,
                              selected: 1,
                              order: [:day, :month, :year] %>
  <%= f.input :gender, as: :select, collection: Profile::GENDER, prompt: "Select your gender" %>
  <%= f.input :bio, as: :text %>
  <%= f.input :interests, as: :text %>
  <%= f.input :postcode, as: :integer %>
  <%= f.input :city %>
  <%= f.submit "Update Profile" %>
<% end %>
